<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AirCareApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AirCareApp" parent="Base.Theme.AirCareApp" />

    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0F9D58</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_green</item>

        <!-- Customize your theme here. -->
    </style>

    <!-- Light mode -->
    <style name="ColorMenu" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Đổi màu của icon trong BottomNavigationView -->
        <item name="itemIconTint">@color/custom_color_button_nav</item>
        <item name="itemTextColor">@color/custom_color_button_nav</item>
        <item name="android:background">@color/light_white</item>
    </style>

    <style name="ColorMenuStatistic" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Đổi màu của icon trong BottomNavigationView -->
        <item name="itemIconTint">@color/custom_color_bottom_nav_statistic</item>
        <item name="itemTextColor">@color/custom_color_bottom_nav_statistic</item>
        <item name="android:background">@drawable/bg_menu_statistic</item>
    </style>

    <style name="SCREEN" >
        <item name="android:background">@color/white</item>
    </style>

    <style name="TEXT_DETAIL" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TEXT" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BUTTON" >
        <item name="android:background">@color/bg_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_BUTTON_DETAIL" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewBackground">
        <item name="android:background">@drawable/hs_retangle</item>
    </style>

    <style name="ViewImage">
        <item name="android:background">@drawable/blur_green</item>
    </style>

    <style name="arrowBackground">
        <item name="android:background">@drawable/ic_arrow_forward</item>
    </style>

    <style name="ICON" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:tint">@color/black</item>
        <!-- Đổi màu của icon -->
    </style>


    <style name="CardBackground" parent="Widget.MaterialComponents.CardView">
        <!-- Đổi màu nền -->
        <item name="cardBackgroundColor">@color/white</item>

        <!-- Đổi màu viền -->
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="RelativeBackground" >
        <item name="android:background">@color/light_green_more</item>
    </style>


</resources>