<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.DetailPlaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/place_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/icBackDetail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icBackDetail"
                android:text="HOME"
                android:textSize="30sp"
                android:textColor="@color/bg_green"
                android:textStyle="bold|italic"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/ic_favorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_favorite"
                android:layout_below="@id/icBackDetail"
                android:layout_toEndOf="@id/dashboard"
                android:layout_marginTop="25dp"
                android:layout_marginStart="15dp"/>

            <ImageView
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo_black"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/icBackDetail"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="170dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/detail"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:background="@drawable/hs_retangle"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/ic_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_location"
                android:layout_marginStart="40dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu Duc city, Ho Chi Minh city"
                android:textSize="18sp"
                android:layout_toEndOf="@id/ic_location"
                android:layout_marginTop="60dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_location"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/hs_green"
                android:src="@drawable/place"
                android:layout_marginStart="60dp"
                android:layout_marginTop="120dp"/>

            <TextView
                android:id="@+id/statusAqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/hs_green"
                android:layout_toEndOf="@id/img_location"
                android:layout_marginTop="110dp"
                android:layout_marginStart="40dp"/>

            <!--            <TextView-->
            <!--                android:id="@+id/point_aqi"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="45"-->
            <!--                android:textSize="45sp"-->
            <!--                android:textColor="@color/black"-->
            <!--                android:layout_below="@id/statusAqi"-->
            <!--                android:layout_marginStart="180dp"/>-->

            <TextView
                android:id="@+id/constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aqi"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_below="@id/statusAqi"
                android:layout_toEndOf="@id/img_location"
                android:layout_marginTop="10dp"
                android:layout_marginStart="80dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Measurement details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm10"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txPm10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM10"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm25"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txPm25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM2.5"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm1"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txCo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CO"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_o3"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txO3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="O3"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_no2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txNo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO2"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_no2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NO"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm25"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txSo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SO2"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm25"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/txNh3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 µg/m³"
                            android:textSize="25sp"
                            android:textColor="@color/bg_green"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NH3"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_temperature"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/hs_green"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_water"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/hs_green"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_explore"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/hs_green"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_air"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/hs_green"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tempValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10℃"
                android:textSize="20sp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/humidityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="77%"
                android:textSize="20sp"
                android:layout_marginStart="65dp"/>

            <TextView
                android:id="@+id/tvPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="998 hPa"
                android:textSize="20sp"
                android:layout_marginStart="45dp"/>

            <TextView
                android:id="@+id/windValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8km/h"
                android:textSize="20dp"
                android:layout_marginStart="35dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Chart"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM1.0"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/chart_sample"
                android:layout_marginStart="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM10"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/chart_sample"
                android:layout_marginStart="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM2.5"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/chart_sample"
                android:layout_marginStart="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ozone (O3)"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/chart_sample"
                android:layout_marginStart="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nitrogen dioxide (NO2)"
                android:textSize="25sp"
                android:textColor="@color/hs_green"
                android:layout_marginStart="25dp"/>

            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/chart_sample"
                android:layout_marginStart="25dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>