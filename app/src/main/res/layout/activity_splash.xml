<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgIconApp"
        android:layout_width="126dp"
        android:layout_height="109dp"
        android:src="@drawable/ic_load_app" />

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtFirstLetter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/nunito_bold"
            android:text="A "
            android:textColor="@color/color_primary_first"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtSecondLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="I "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtThirdLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="R "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtFourthLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="C "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtFifthLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="A "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtSixthLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="R "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtSeventhLetter"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/color_primary_first"
            android:textSize="20sp"
            android:text="E "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>