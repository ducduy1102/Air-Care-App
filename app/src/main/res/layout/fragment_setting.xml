<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settingFragment"
    android:background="@color/light_white"
    tools:context=".View.SettingFragment">

    <TextView
        android:id="@+id/title_setting"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting and Privacy"
        android:textColor="@color/bg_green"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="70dp"/>

    <!--    Account-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/layout_account">
        <View
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="140dp"
            android:background="@drawable/bg_view"/>

        <TextView
            android:id="@+id/title_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:id="@+id/ic_account"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_account"
            android:layout_below="@id/title_account"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/ic_account"
            android:layout_below="@id/title_account"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_profile"
            android:layout_below="@id/title_account"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="80dp"/>

        <ImageView
            android:id="@+id/ic_lock"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_lock"
            android:layout_below="@id/ic_account"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/ic_lock"
            android:layout_below="@id/tv_profile"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_password"
            android:layout_below="@id/ic_arrow_forward_profile"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="-10dp"/>

        <ImageView
            android:id="@+id/ic_signout"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_logout"
            android:layout_below="@id/ic_lock"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/ic_signout"
            android:layout_below="@id/tv_password"/>
    </RelativeLayout>

    <!--    Common-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_common"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/layout_account">
        <View
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_view" />

        <TextView
            android:id="@+id/title_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/ic_language"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_language"
            android:layout_below="@id/title_common"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_language"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/ic_language"
            android:layout_below="@id/title_common"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_language"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_language"
            android:layout_below="@id/title_common"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"/>

        <ImageView
            android:id="@+id/ic_mode"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_darkmode"
            android:layout_below="@id/ic_language"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="@string/mode"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ic_mode"
            android:layout_below="@id/tv_language"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_dark_mode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_toggle_off"
            android:layout_toEndOf="@id/tv_mode"
            android:layout_below="@id/ic_arrow_forward_language"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:layout_marginStart="80dp"/>

        <ImageView
            android:id="@+id/ic_notification"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_notification"
            android:layout_below="@id/ic_mode"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_notification"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="@string/notification"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ic_notification"
            android:layout_below="@id/tv_mode"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_noti"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_mode"
            android:layout_below="@id/ic_arrow_forward_dark_mode"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"/>

    </RelativeLayout>

    <!--    Support-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_support"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/layout_common">
        <View
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_view" />

        <TextView
            android:id="@+id/title_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/bg_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/ic_about_us"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_reference"
            android:layout_below="@id/title_support"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_support"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="@string/about_us"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ic_about_us"
            android:layout_below="@id/title_support"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_about_us"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_support"
            android:layout_below="@id/title_support"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="80dp"/>

        <ImageView
            android:id="@+id/ic_help"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_help"
            android:layout_below="@id/ic_about_us"
            android:layout_marginTop="25dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ic_help"
            android:layout_below="@id/ic_about_us"/>

        <ImageView
            android:id="@+id/ic_arrow_forward_help"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_forward"
            android:layout_toEndOf="@id/tv_help"
            android:layout_below="@id/ic_arrow_forward_about_us"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"/>
    </RelativeLayout>
</RelativeLayout>