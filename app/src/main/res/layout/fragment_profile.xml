<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.ProfileFragment">

    <RelativeLayout
        android:id="@+id/layoutTile"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBackProfile"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_arrow_left" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/logo_black" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/layoutTile"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar_default"
        app:civ_border_color="@color/bg_green"
        app:civ_border_width="3dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@+id/profileImg">

        <EditText
            android:id="@+id/profileFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="20dp"
            android:text="@string/fullname"
            android:maxLength="100"
            android:textSize="20sp"
            android:padding="20dp"
            android:background="@color/light_green_more"/>

        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_sample"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:background="@color/light_green_more"
            android:layout_below="@+id/profileFullName"/>

        <Button
            android:id="@+id/buttonUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="20sp"
            android:text="Update Profile"
            android:textColor="@color/bg_green"
            android:backgroundTint="@color/light_green_more"
            android:layout_below="@+id/profileEmail"/>

    </RelativeLayout>

</RelativeLayout>