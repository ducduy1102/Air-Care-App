<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeFragment"
    tools:context=".HomeFragment">

    <View
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:background="@drawable/retangle_btn"/>

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:textStyle="bold|italic"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/avatar_default"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/dashboard"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="11 November 11"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:textStyle="bold|italic"
        android:layout_below="@id/dashboard" />

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/add"
        android:layout_below="@+id/date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp"/>

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit_icon"
        android:layout_below="@+id/date"
        android:layout_toStartOf="@id/img_add"
        android:layout_marginTop="5dp"/>

    <View
        android:id="@+id/viewDetail"
        android:layout_width="320dp"
        android:layout_height="250dp"
        android:background="@drawable/homescreen_view"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chart 7 days"
        android:layout_marginStart="200dp"
        android:layout_marginTop="150dp"/>

    <Button
        android:id="@+id/btn_aqi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple"
        android:text="45 AQI"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:drawableStart="@drawable/thermostat_icon"/>

    <Button
        android:id="@+id/btn_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_btn"
        android:backgroundTint="@color/white"
        android:text="32*C"
        android:textColor="@color/blue"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_aqi"/>

    <Button
        android:id="@+id/btn_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_btn"
        android:backgroundTint="@color/white"
        android:text="62%"
        android:textColor="@color/blue"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_temp"/>

    <Button
        android:id="@+id/buttonPlace"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Places"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:backgroundTint="@color/light_blue"
        android:layout_marginTop="380dp"
        android:layout_marginStart="30dp"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonPlace"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:rowCount="2"
        android:columnCount="3" >
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/home_icon"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="Home"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <Button
        android:id="@+id/btnActiveStatus"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Active mode: .................."
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:backgroundTint="@color/light_blue"
        android:layout_marginStart="30dp"
        android:layout_marginTop="700dp"/>
</RelativeLayout>