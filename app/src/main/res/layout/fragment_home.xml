<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeFragment"
    tools:context=".View.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dashboard.HomeFragment">

        <TextView
            android:id="@+id/dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textSize="30sp"
            android:textColor="@color/bg_green"
            android:textStyle="bold|italic"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo_black"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/dashboard"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="11 November 2023"
            android:textSize="20sp"
            android:textColor="@color/bg_green"
            android:textStyle="bold|italic"
            android:layout_below="@id/dashboard" />

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_announce_temp"
            android:layout_below="@+id/date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"/>

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search"
            android:layout_below="@+id/date"
            android:layout_toStartOf="@id/img_add"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/detail"
            android:layout_width="370dp"
            android:layout_height="250dp"
            android:background="@drawable/hs_retangle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"/>

        <View
            android:id="@+id/detail_green"
            android:layout_width="110dp"
            android:layout_height="250dp"
            android:background="@drawable/hs_green"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"/>

        <View
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_yellow"
            android:layout_marginStart="145dp"
            android:layout_marginTop="210dp"/>

        <View
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_green"
            android:layout_marginStart="230dp"
            android:layout_marginTop="210dp"/>

        <View
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:background="@drawable/circle_red"
            android:layout_marginStart="310dp"
            android:layout_marginTop="210dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_circle_down"
            android:layout_marginStart="230dp"
            android:layout_marginTop="320dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_account" />

            <TextView
                android:id="@+id/point_aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="50sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AQI"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="HOME \n Thu Duc, Ho Chi Minh city"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:layout_marginStart="170dp"
            android:layout_marginTop="130dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thurs"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51-100"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weather_rain_cloud_sun"
            android:layout_marginStart="150dp"
            android:layout_marginTop="250dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0-50"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weather_rain_cloud_sun"
            android:layout_marginStart="225dp"
            android:layout_marginTop="250dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="290dp"
            android:layout_marginTop="150dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fri"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101-150"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24°"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:gravity="center" />

        </LinearLayout>



        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/weather_rain_cloud_sun"
            android:layout_marginStart="310dp"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/buttonPlace"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Places"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_green"
            android:layout_marginTop="380dp"
            android:layout_marginStart="30dp"/>

        <GridLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonPlace"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:rowCount="2"
            android:columnCount="3" >
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_home_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Home"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_place_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Place"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_place_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="30dp"
                        android:text="Place2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_work_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="Work"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_place_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="Place2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_margin="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_add"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:text="Add"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/bg_green"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <Button
            android:id="@+id/active_status"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Active mode: Home"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_green"
            android:layout_marginStart="30dp"
            android:layout_marginTop="700dp"/>
    </RelativeLayout>
</RelativeLayout>