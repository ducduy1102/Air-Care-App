<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:id="@+id/homeFragment"
    tools:context=".View.HomeFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        style="@style/ViewImage"/>

    <LinearLayout
        style="@style/ViewImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                style="@style/ICON"
                android:id="@+id/imgAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_account" />

            <TextView
                style="@style/TEXT"
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Hello"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/imgAvatar"
                android:layout_marginTop="13dp"
                android:layout_marginStart="10dp" />


            <ImageView
                android:id="@+id/imgCloud"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:background="@drawable/ic_cloud_v2"
                android:layout_below="@id/imgAvatar"/>

            <TextView
                android:id="@+id/tvWeatherDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostly sunny"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/imgCloud"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                style="@style/TEXT"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/imgCloud"
                android:layout_below="@id/tvUsername"
                android:layout_alignParentRight="true"
                android:layout_marginStart="80dp"
                android:layout_marginTop="33dp"/>

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27\u00b0C"
                style="@style/TEXT"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/imgCloud"
                android:layout_below="@id/tvUsername"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="63dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <View
                android:layout_width="350dp"
                android:layout_height="170dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                style="@style/ViewBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise"
                style="@style/TEXT"
                android:textSize="20sp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/tvSunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunrise"
                style="@style/TEXT"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="80dp"
                android:layout_marginTop="90dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/sun"
                android:layout_marginStart="70dp"
                android:layout_marginTop="130dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunset"
                style="@style/TEXT"
                android:textSize="20sp"
                android:layout_marginStart="230dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/tvSunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sunset"
                style="@style/TEXT"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="230dp"
                android:layout_marginTop="90dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@drawable/sun"
                android:layout_marginStart="220dp"
                android:layout_marginTop="130dp"/>

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_humidity_v2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/humidity"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_wind_v2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvWind"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wind"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pressure_v2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvPressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pressure"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_co2"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvC02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/co2"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm25"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvPm25"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pm25"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    style="@style/CardBackground"
                    app:cardCornerRadius="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            style="@style/ICON"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_pm10"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/tvPm10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pm10"
                            style="@style/TEXT"
                            android:textSize="25sp"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</FrameLayout>