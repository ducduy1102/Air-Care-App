<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.AirCareApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.AirCareApp" parent="Base.Theme.AirCareApp" />
    <style name="Theme.Fab_Bottom_app_bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_black</item>
        <item name="colorPrimaryVariant">#0F9D58</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_green</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark mode -->

    <style name="ColorMenu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Đổi màu của icon trong BottomNavigationView -->
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ColorMenuStatistic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Đổi màu của icon trong BottomNavigationView -->
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:background">@drawable/bg_menu_statistic_dark</item>
    </style>

    <style name="CardBackground" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/grey</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ICON" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SCREEN" >
        <item name="android:background">@color/dark_black</item>
    </style>

    <style name="TEXT" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_DETAIL" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BUTTON" >
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/bg_green</item>
    </style>

    <style name="TEXT_BUTTON_DETAIL" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ViewBackground">
        <item name="android:background">@drawable/hs_retangle_black</item>
    </style>

    <style name="ViewImage">
        <item name="android:background">@drawable/dark</item>
    </style>

    <style name="arrowBackground">
        <item name="android:background">@drawable/ic_arrow_forward_white</item>
    </style>
</resources>